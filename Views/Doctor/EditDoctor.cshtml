@model Hospital.Models.Doctor

@{
    ViewData["Title"] = "EditDoctor";
}

<h1>EditDoctor</h1>

<h4>Doctor</h4>
<hr/>
<div class="row">
    <div class="col-md-4">
        <form asp-action="EditDoctor">

            @Html.HiddenFor(m => m.userId)
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="name" class="control-label"></label>
                <input asp-for="name" class="form-control" />
                <span asp-validation-for="name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="specializationType" class="control-label"></label>
                @Html.DropDownListFor(m => m.specializationType, Html.GetEnumSelectList(typeof(Hospital.Models.SpecializationType)), new { @class = "form-control" })
            </div>
            <div class="form-group">
                <label asp-for="jobSeniority" class="control-label"></label>
                <input asp-for="jobSeniority" class="form-control" />
                <span asp-validation-for="jobSeniority" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
