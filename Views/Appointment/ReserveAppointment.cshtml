@using System.Web.Mvc.Html
@using Microsoft.AspNetCore.Mvc.Localization
@model Hospital.Models.Appointment
@inject IViewLocalizer Localizer

@{
    ViewData["Title"] = Localizer["Reserve Appointment"];
}

<h1>@Localizer["Reserve Appointment"]</h1>

<h4>@Localizer["Appointment"]</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="ReserveAppointment">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label class="control-label">@Localizer["Date"]</label>
                <input readonly asp-for="date" class="form-control" />
                <span asp-validation-for="date" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">@Localizer["Reason"]</label>
                @Html.TextArea("reason", @Model.reason, new { @class = "form-control" })
                <span asp-validation-for="reason" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value=@Localizer["Reserve"] class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">@Localizer["Back to List"]</a>
</div>

@section Scripts {

    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
